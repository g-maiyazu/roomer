<% group.each do |user| %>
  <div class="user-card d-flex align-items-center">
    <div style="width: 100%">
      <!-- ユーザーカード：アバター -->
      <div class="d-flex align-items-end justify-content-center mb-3">
        <%= link_to image_tag("no_user.png", class: "#{ "logged_in" if user_signed_in? } rounded-circle z-depth-0", alt: "avatar image") %>
      </div>
      <!-- ユーザーカード：名前とユーザーネーム -->
      <div class="user-card-names-container d-flex justify-content-center mb-2">
        <div class="user-card-names text-center">
          <div class="user-username"><%= user.user_name %></div>
        </div>
      </div>
    </div>
  </div>
<% end %>
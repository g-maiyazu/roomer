<header class="header_height">
  <div class="wrapper">
    <div class="outer">
      <div class="logo">
        <%= link_to image_tag('logo.png', class: "header-logo"), root_path %>
      </div>
      <div class="search">
        <div class="header_search">
          <%= form_tag(root_path,method:"get") do %>
            <form method="get" action="#" class="search_container">
              <input type="text" size="25" placeholder="キーワード検索">
              <input type="submit" value="&#xf002">
            </form>
          <% end %>
        </div>
      </div>
      <% if user_signed_in? %>
        <div class="dropdown">
          <button class="dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">
            <% if !current_user.blank? %>
              <%= image_tag current_user.avatar.url, size: "40x40", class: 'avatar_present_img rounded-circle z-depth-0 mb-4', alt: "avatar image" %>
            <% else %>
              <%= image_tag 'no_user.png', size: "40x40", class: 'avatar_present_img d-block rounded-circle z-depth-0 mb-4', alt: "avatar image" %>
            <% end %>
          </button>
          <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
            <li role="presentation">
              <%= link_to "マイルーム", profile_path(current_user) %>
            </li>
            <li role="presentation">
              <%= link_to "アカウント設定", edit_user_path %>
            </li>
            <li role="presentation"><a role="menuitem" tabindex="-1" href="#">投稿する</a></li>
            <li role="presentation" class="divider"></li>
            <li role="presentation">
              <%= link_to "ログアウト", logout_path, method: :delete %>
            </li>
          </ul>
        </div>
      <% else %>
        <div class="register">
          <%= link_to "新規登録", signup_path, class: "btn-flat-border-registrer" %>
        </div>
        <div class="login">          
          <%= link_to "ログイン", login_path, class: "btn-flat-border" %>
        </div>
      <% end %>
    </div>
  </div>
</header>